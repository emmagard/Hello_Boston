
<div class='container'>
  <div class="page-header">
    <h2>My Posts</h2>
    <button type="button" class="btn btn-default"><%= link_to 'Back to Home', root_path %></button>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @posts.present? == false %>
        <h3> There are no posts to manage... </h3>
        <button type="button" class="btn btn-default"><h3> <%= link_to 'Add Some Posts!', new_post_path %> </h3><button>
      <% end %>

      <% @posts.each do |post| %>
        <h4><%= post.title %></h4>
        <div class-'btn-group'>
          <button type="button" class="btn btn-default"><%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></button>
          <button type="button" class="btn btn-default"><%= link_to 'Edit ', edit_post_path(post) %></button>
          </div>
          <small><%= post.content %><br></small><br>
      <% end %>
    </div>
  </div>
</div>
