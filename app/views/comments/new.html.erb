<div class='text-center'>

  <h2>Add a Comment!</h2>

    <% if user_signed_in? %>
      <%= form_for @comment, url: post_comments_path(@post) do |f| %>
        <%= f.label :content, 'Your Comment' %><br>
        <%= f.text_area :content %><br><br>
        <%= f.submit %>

      <% end %>
    <% end %>
</div>
