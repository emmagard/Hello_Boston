<h2> <%= @post.title %> <br>
     <%= @post.content %> <br>
     <%= @post.url %>
</h2>

<%= link_to 'Back to Homepage', root_path %>

<%= link_to 'Add Comment', new_post_comment_path %>

<% if @comments.present? == false %>
  <p> there's no comments here yet. write a comment </p>
<% end %>

<ul>
    <% @comments.each do |comment| %>
      <%= comment.content %>
      <%= comment.created_at %>
      <%= comment.user.username %>
    <% end %>
</ul>
