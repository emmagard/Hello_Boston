<div id="sign-in">
  <div id="sign-in-panel">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Log In</h2>
      </div>
      <div class="panel-body sign-in-content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div><%= f.label :login, "Username or Email" %><br />
          <%= f.text_field :login, autofocus: true, :size => 35 %></div>

          <div><%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", :size => 35 %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>
          <br>
          <div>
            <%= f.submit "Sign in", :class => "btn" %> <%=link_to "New Account", new_user_registration_path, :class => "btn btn-default" %>
          </div>
          <br>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
        <br>

      </div>
    </div>

  </div>




</div>
