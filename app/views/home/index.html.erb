<% if user_signed_in? == false %>
<%= link_to 'User Login', new_user_session_path %>
<% end %>


<% if user_signed_in? %>
  You are signed in as <%= current_user.username %>
  <%= link_to 'Add Post', new_post_path %>
  <%= link_to 'Manage Posts', users_posts_manager_path(current_user) %>
  <%= link_to 'Manage Comments', users_comments_manager_path(current_user) %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>

  <div class='weather'>
    <tr>
      <td>
        <% boston_now = Weather.boston_conditions %>
        <%= image_tag(boston_now["icon_url"]) %>
        <%= boston_now["weather"] %>
        <%= boston_now["temp_f"] %>

      </td>
        <% boston_later = Weather.boston_forecast %>
        <%= image_tag(boston_later["icon_url"]) %>
        High: <%= boston_later["high"]["fahrenheit"] %>
        Low: <%= boston_later["low"]["fahrenheit"] %><br>
        Tomorrow

        <!-- how do I say- from the hash where period = 1 etc.. -->

      <td>
      </td>
      </tr>
    </tr>
  </div>

  <div class='posts'>
    <ul>
      <% @posts.each do |post| %>
      <li> <%= post.title %> </li>
        <small> <%= post.content %> </small><br>
        <small> <%= post.url %> </small><br>
        <small> <%= post.user.username %> </small><br>
        <small> <%= post.created_at %> </small><br>
        <%= link_to 'Comments', post_comments_path(post) %>
      <% end %>
    </ul>
  </div>

  <div class='instagram'>
    <% @pics.map do |pic| %>
    <td> <%= link_to image_tag(pic['images']['standard_resolution']['url'], size: "360x360"), pic['link'] %>
    </td>
    <% end %>
  </div>

  <div class='articles'>
    <% @entry.map do |entry| %>
    <li> <%= link_to entry.title, entry.url %> </li>
    <% end %>
  </div>

<% end %>
